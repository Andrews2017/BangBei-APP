<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp">
        <ImageView
            android:id="@+id/icon_my_seek_order"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/download"/>
        <TextView
            android:id="@+id/txt_order_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/icon_my_seek_order"
            android:layout_marginTop="2dp"
            android:textSize="15dp"
            android:layout_marginLeft="2dp"
            android:text="订单号："
            />
        <TextView
            android:id="@+id/txt_ask_help_record_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_order_id_text"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/txt_ask_help_record_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:textColor="#00CED1"
            android:text="待接单"
            android:textStyle="bold"
            android:layout_alignParentTop="true" />
        <ImageView
            android:id="@+id/icon_my_seek_order_notes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/icon_my_seek_order"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/beizhu"/>
        <TextView
            android:id="@+id/txt_ask_help_record_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/icon_my_seek_order_notes"
            android:layout_below="@id/txt_ask_help_record_id"
            android:text="备注：是个大件，可能有点重，请中午12点送到我的寝室"/>

        <ImageView
            android:id="@+id/icon_my_seek_order_helper_name"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/wo"
            android:layout_marginTop="7dp"
            android:layout_below="@id/txt_ask_help_record_notes"/>
        <TextView
            android:id="@+id/txt_helper_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/icon_my_seek_order_helper_name"
            android:layout_below="@id/txt_ask_help_record_notes"
            android:layout_marginLeft="5dp"
            android:text="接单人："/>
        <TextView
            android:id="@+id/txt_helper_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/txt_helper_name"
            android:layout_marginLeft="30dp"
            android:text="电话    ："/>
        <ImageView
            android:id="@+id/img_bottom_line"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_helper_tel"
            android:layout_marginTop="12dp"
            android:src="@drawable/dibufengexian"/>

        <ImageView
            android:id="@+id/btn_confirm_complete"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-5dp"
            android:layout_above="@id/img_bottom_line"
            android:src="@drawable/querenshouhuo2"/>

        <ImageView
            android:id="@+id/img_order_complete_logo"
            android:layout_width="85dp"
            android:layout_height="63dp"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-12dp"
            android:layout_above="@id/img_bottom_line"
            android:src="@drawable/yiwancheng"/>

    </RelativeLayout>


</LinearLayout>