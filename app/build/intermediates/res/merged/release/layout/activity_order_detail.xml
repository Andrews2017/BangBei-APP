<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@android:color/white"
        >

        <!--用于设置权重将底部按钮置地-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--该布局用于布置头像\姓名、财富值以及个人信息-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <!--放置头像和姓名-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/protraitImageDetail"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/defaulthead"
                        />
                    <TextView
                        android:id="@+id/nameTextDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@android:color/black"
                        android:text="姓名"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>

                <!--该Table用于放置金币数量以及求助者信息-->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">
                    <TableRow
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="50dp"
                            android:src="@drawable/jinbi2"/>
                        <TextView
                            android:id="@+id/moneyTextDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提供金币："
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="50dp"
                            android:src="@drawable/bangzhubieren"/>
                        <TextView
                            android:id="@+id/txt_help_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="帮助别人：  次"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            />
                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/dibufengexian"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:paddingLeft="12dp">

                <TableRow
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_column="1"
                        android:src="@drawable/quhuodi"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="17dp"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_vertical"
                        android:text="取件地点"
                        />
                </TableRow>
                <TableRow
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/addr1TextDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="50dp"
                        android:textColor="#555555"
                        android:layout_column="2"
                        android:text="  "
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_column="1"
                        android:src="@drawable/songhuodi"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="17dp"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_vertical"
                        android:text="送货地点"
                        />
                </TableRow>
                <TableRow
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/addr2TextDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="50dp"
                        android:layout_column="2"
                        android:textColor="#555555"
                        android:text=" "
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_column="1"
                        android:src="@drawable/beizhu"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="17dp"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_vertical"
                        android:text="详细描述"
                        />
                </TableRow>
                <TableRow
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/notesTextDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="70dp"
                        android:layout_column="2"
                        android:textColor="#555555"
                        android:text="  "
                        />
                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/dibufengexian"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:layout_marginTop="17dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/quhuoxinxi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"
                    android:layout_marginLeft="8dp"
                    android:text="取货信息"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_secret_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="35dp"
                android:textColor="#999999"
                android:text="接单之后即可看到取货信息哦"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/img_secret_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/dibufengexian"/>



            <!--该TableLayout用于放置隐藏的“取件人姓名、手机号、取货号”-->
            <TableLayout
                android:id="@+id/table_secret_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                >
                <TableRow>
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_column="1"
                        android:src="@drawable/qujianrenxingming2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名        :"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/txtOwnerNameDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="杨双吉"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_column="1"
                        android:src="@drawable/quhuoma2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取货码   :"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/txtStaffCodeDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4252"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_column="1"
                        android:src="@drawable/qujianrendianhua"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话号码:"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/txtOwnerTelDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="18483680996"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        />

                </TableRow>
            </TableLayout>
        </LinearLayout>


        <!--放置底部“提交”和“清除”按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/btnConfirmDetail"
                    android:layout_width="120sp"
                    android:layout_height="42sp"
                    android:layout_marginLeft="25dp"
                    android:textSize="16dp"
                    android:background="@drawable/save_button_bg"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:text="确认接单" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/btnCancelDetail"
                    android:layout_width="120sp"
                    android:layout_height="42sp"
                    android:layout_marginRight="25dp"
                    android:textSize="16dp"
                    android:background="@drawable/cancel_button_bg"
                    android:backgroundTint="@android:color/darker_gray"
                    android:text="返回" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
